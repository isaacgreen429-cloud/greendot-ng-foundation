    <!-- JavaScript for Donation Simulation and UI Logic -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Set current year in the footer
            document.getElementById('current-year').textContent = new Date().getFullYear();

            const amountInput = document.getElementById('amount');
            const donateForm = document.getElementById('donation-form');
            const messageContainer = document.getElementById('message-container');
            const donateButton = document.getElementById('donate-submit-btn');
            const amountButtons = document.querySelectorAll('.amount-btn');

            // --- Enable/Disable Button based on Input ---
            const checkAmount = () => {
                const amount = parseFloat(amountInput.value);
                donateButton.disabled = !(amount > 0);
            };

            amountInput.addEventListener('input', checkAmount);
            checkAmount(); // Initial check

            // --- Handle Fixed Amount Buttons ---
            amountButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    const amount = e.currentTarget.getAttribute('data-amount');
                    amountInput.value = amount;

                    // Highlight selected button (optional)
                    amountButtons.forEach(btn => btn.classList.remove('bg-greendot-primary', 'text-white'));
                    e.currentTarget.classList.add('bg-greendot-primary', 'text-white');
                    checkAmount();
                });
            });

            // --- Donation Form Submission (Simulated) ---
            donateForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const amount = parseFloat(amountInput.value);
                const name = document.getElementById('name').value || 'Anonymous Supporter';
                const email = document.getElementById('email').value;

                if (amount <= 0 || !email) {
                    messageContainer.className = 'mt-4 p-4 rounded-lg bg-red-100 text-red-700';
                    messageContainer.textContent = 'Please enter a valid amount and email address.';
                    messageContainer.classList.remove('hidden');
                    return;
                }

                // Show Loading State
                donateButton.disabled = true;
                donateButton.innerHTML = `Processing ‚Ç¶${amount.toLocaleString()}...`;
                messageContainer.classList.add('hidden');

                // Simulate payment processing delay (e.g., an API call)
                await new Promise(resolve => setTimeout(resolve, 2500));

                // Simulate success
                messageContainer.className = 'mt-4 p-4 rounded-lg bg-greendot-light text-greendot-dark border-2 border-greendot-dark';
                messageContainer.innerHTML = `
                    <h4 class="font-bold text-lg mb-1">Donation Successful!</h4>
                    <p>Thank you, ${name}! Your generous donation of ‚Ç¶${amount.toLocaleString()} has been successfully processed (simulated). A confirmation will be sent to ${email}.</p>
                    <p class="mt-2 text-sm font-semibold">Your support will directly fund education and cancer care initiatives.</p>
                `;
                messageContainer.classList.remove('hidden');

                // Reset form state after success (optional)
                donateButton.disabled = false;
                donateButton.innerHTML = 'Proceed to Payment';
                donateForm.reset();
                amountButtons.forEach(btn => btn.classList.remove('bg-greendot-primary', 'text-white'));
            });
        });
    </script>
